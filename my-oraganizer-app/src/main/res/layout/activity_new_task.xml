<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="avisha.com.myorganizer.view.NewTaskActivity">

    <EditText
        android:id="@+id/taskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Task"
        android:inputType="textPersonName"
        android:text="" />

    <Switch
        android:id="@+id/important_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/taskName"
        android:layout_alignStart="@+id/taskName"
        android:layout_below="@+id/taskName"
        android:layout_marginTop="27dp"
        android:text="Important" />

    <Switch
        android:id="@+id/urgent_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/important_switch"
        android:layout_alignStart="@+id/important_switch"
        android:layout_below="@+id/important_switch"
        android:layout_marginTop="23dp"
        android:text="Urgent" />

    <EditText
        android:id="@+id/date_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/urgent_switch"
        android:layout_alignStart="@+id/urgent_switch"
        android:layout_below="@+id/urgent_switch"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/time_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_edit"
        android:layout_alignStart="@+id/date_edit"
        android:layout_below="@+id/date_edit"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Time"
        android:inputType="time" />

    <EditText
        android:id="@+id/phone_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/time_edit"
        android:layout_alignStart="@+id/time_edit"
        android:layout_below="@+id/time_edit"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/phone_edit"
        android:layout_alignRight="@+id/phone_edit"
        android:layout_below="@+id/phone_edit"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_edit"
        android:layout_centerHorizontal="true"
        android:id="@+id/save_button" />
</RelativeLayout>
