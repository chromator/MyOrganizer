<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="60dp">

    <TextView
        android:id="@+id/list_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorSecondary"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/list_title"
        style="@style/ListItemPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/list_icon"
        android:layout_alignTop="@id/list_icon"
        android:text="Test Title" />

    <TextView
        android:id="@+id/list_desc"
        style="@style/ListItemSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_title"
        android:layout_below="@+id/list_title"
        android:layout_marginTop="5dp"
        android:text="Description and content here" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/list_icon"
        android:background="@color/darkGrey">

    </View>
</RelativeLayout>